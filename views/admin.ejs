                    <thead class="table-light">
                        <tr>
                            <th style="width: 25%">T√™n SP</th>
                            <th style="width: 15%">Gi√° & Ship</th>
                            <th style="width: 10%">Kho</th>
                            <th style="width: 35%">Qu√† T·∫∑ng (T√≠ch ch·ªçn)</th>
                            <th style="width: 15%">H√†nh ƒë·ªông</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(p => { %>
                        <tr class="product-row" data-id="<%= p.id %>">
                            <td>
                                <strong><%= p.name %></strong><br>
                                <% if (p.image) { %><img src="<%= p.image %>" class="product-thumb mt-1"><% } %>
                            </td>
                            <td>
                                <div class="text-danger fw-bold mb-2"><%= p.price %></div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input input-freeship" type="checkbox" <%= p.isFreeship ? 'checked' : '' %>>
                                    <label class="form-check-label small text-success fw-bold">Freeship</label>
                                </div>
                            </td>
                            <td>
                                <select class="form-select form-select-sm input-stock <%= p.inStock ? 'text-success fw-bold' : 'text-danger fw-bold' %>">
                                    <option value="true" <%= p.inStock ? 'selected' : '' %>>C√íN</option>
                                    <option value="false" <%= !p.inStock ? 'selected' : '' %>>H·∫æT</option>
                                </select>
                            </td>
                            <td>
                                <div class="gift-selector">
                                    <% customGifts.forEach(g => { 
                                        let isSelected = p.allowedGifts && p.allowedGifts.includes(g.name);
                                        if (g.inStock) {
                                    %>
                                        <div class="form-check gift-option">
                                            <input class="form-check-input input-gift" type="checkbox" value="<%= g.name %>" <%= isSelected ? 'checked' : '' %>>
                                            <label class="form-check-label"><%= g.name %></label>
                                        </div>
                                    <% }}) %>
                                </div>
                            </td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editModal<%= p.id %>">S·ª≠a</button>
                                <form action="/admin/delete-product" method="POST" class="d-inline"><input type="hidden" name="id" value="<%= p.id %>"><button class="btn btn-sm btn-outline-danger">X√≥a</button></form>
                            </td>
                        </tr>
                        
                        <div class="modal fade" id="editModal<%= p.id %>" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form action="/admin/save-product-info" method="POST">
                                        <div class="modal-header bg-primary text-white"><h5 class="modal-title">S·ª≠a SP</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                                        <div class="modal-body">
                                            <input type="hidden" name="id" value="<%= p.id %>">
                                            <div class="mb-3"><label>T√™n SP</label><input type="text" name="name" class="form-control" value="<%= p.name %>"></div>
                                            <div class="mb-3"><label>Gi√°</label><input type="text" name="price" class="form-control" value="<%= p.price %>"></div>
                                            <div class="mb-3"><label>Link ·∫¢nh</label><input type="text" name="image" class="form-control" value="<%= p.image %>"></div>
                                        </div>
                                        <div class="modal-footer"><button type="submit" class="btn btn-primary">L∆∞u</button></div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card mb-4 border-success">
            <div class="card-header bg-gradient-success text-white">
                <i class="bi bi-plus-circle-fill"></i> TH√äM S·∫¢N PH·∫®M M·ªöI
            </div>
            <div class="card-body bg-light">
                <form action="/admin/add-product" method="POST" class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label fw-bold">T√™n S·∫£n Ph·∫©m:</label>
                        <input type="text" name="name" class="form-control" placeholder="V√≠ d·ª•: S√¢m n∆∞·ªõc g√≥i..." required>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label fw-bold">Gi√° b√°n:</label>
                        <input type="text" name="price" class="form-control" placeholder="500k" required>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Link ·∫¢nh (URL):</label>
                        <input type="text" name="image" class="form-control" placeholder="https://...">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-success w-100 fw-bold py-2">TH√äM NGAY</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header bg-warning text-dark">üéÅ KHO QU√Ä T·∫∂NG</div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <% customGifts.forEach(g => { %>
                            <tr>
                                <td><%= g.name %></td>
                                <td><form action="/admin/toggle-gift" method="POST"><input type="hidden" name="id" value="<%= g.id %>"><div class="form-check form-switch"><input class="form-check-input" type="checkbox" onchange="this.form.submit()" <%= g.inStock ? 'checked' : '' %>></div></form></td>
                                <td><form action="/admin/delete-gift" method="POST"><input type="hidden" name="id" value="<%= g.id %>"><button class="btn btn-sm btn-outline-danger">X√≥a</button></form></td>
                            </tr>
                            <% }) %>
                        </table>
                        <form action="/admin/add-gift" method="POST" class="d-flex mt-2"><input type="text" name="name" class="form-control me-2" placeholder="T√™n qu√†..." required><button class="btn btn-warning">Th√™m</button></form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header bg-secondary text-white">‚öôÔ∏è C·∫§U H√åNH API</div>
                    <div class="card-body">
                        <form action="/admin/save-ai" method="POST">
                            <label>Gemini API Key:</label>
                            <input type="text" name="apiKey" class="form-control mb-2" value="<%= aiConfig.apiKey %>">
                            <button class="btn btn-dark w-100">L∆∞u</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="floating-save-bar">
        <button onclick="saveAllBulk()" class="btn btn-primary btn-lg fw-bold shadow"><i class="bi bi-save-fill"></i> L∆ØU TO√ÄN B·ªò C·∫§U H√åNH</button>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function saveAllBulk() {
            const btn = document.querySelector('button[onclick="saveAllBulk()"]');
            btn.innerHTML = '‚è≥ ƒêang l∆∞u...'; btn.disabled = true;
            const products = [];
            document.querySelectorAll('.product-row').forEach(row => {
                const id = row.getAttribute('data-id');
                const inStock = row.querySelector('.input-stock').value === 'true';
                const isFreeship = row.querySelector('.input-freeship').checked;
                const allowedGifts = [];
                row.querySelectorAll('.input-gift:checked').forEach(cb => allowedGifts.push(cb.value));
                products.push({ id, inStock, isFreeship, allowedGifts });
            });
            try {
                const res = await fetch('/admin/save-all-bulk', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ products }) });
                const data = await res.json();
                if (data.ok) { alert('‚úÖ ƒê√£ l∆∞u th√†nh c√¥ng!'); location.reload(); }
                else { alert('‚ùå L·ªói: ' + data.error); btn.disabled = false; btn.innerHTML = 'L∆ØU TO√ÄN B·ªò C·∫§U H√åNH'; }
            } catch (e) { alert('‚ùå L·ªói k·∫øt n·ªëi'); btn.disabled = false; }
        }
    </script>
</body>
</html>