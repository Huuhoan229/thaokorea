    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        async function saveAllBulk() {
            const btn = document.querySelector('button[onclick="saveAllBulk()"]');
            btn.innerHTML = '<i class="bi bi-hourglass-split"></i> ƒêang l∆∞u...';
            btn.disabled = true;

            const products = [];
            document.querySelectorAll('.product-row').forEach(row => {
                const id = row.getAttribute('data-id');
                const inStock = row.querySelector('.input-stock').value === 'true';
                const isFreeship = row.querySelector('.input-freeship').checked;
                
                // L·∫•y danh s√°ch qu√† ƒë√£ t√≠ch
                const allowedGifts = [];
                row.querySelectorAll('.input-gift:checked').forEach(cb => {
                    allowedGifts.push(cb.value);
                });

                products.push({ id, inStock, isFreeship, allowedGifts });
            });

            try {
                const res = await fetch('/admin/save-all-bulk', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ products })
                });
                const data = await res.json();
                if (data.ok) {
                    alert('‚úÖ ƒê√£ l∆∞u th√†nh c√¥ng t·∫•t c·∫£ c·∫•u h√¨nh!');
                    location.reload();
                } else {
                    alert('‚ùå L·ªói khi l∆∞u: ' + data.error);
                    btn.disabled = false;
                    btn.innerHTML = '<i class="bi bi-save-fill"></i> L∆ØU TO√ÄN B·ªò C·∫§U H√åNH';
                }
            } catch (e) {
                alert('‚ùå L·ªói k·∫øt n·ªëi: ' + e.message);
                btn.disabled = false;
            }
        }
    </script>
