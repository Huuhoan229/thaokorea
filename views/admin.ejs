                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary w-100"><i class="bi bi-save"></i> L∆∞u C·∫•u H√¨nh FB</button>
                            </div>
                        </form>
                    </div>
                </div>

                <hr>

                <div class="row">
                    <div class="col-md-12 text-center">
                        <% if (!fbConfig.appId || !fbConfig.appSecret) { %>
                            <div class="alert alert-warning">‚ö†Ô∏è Vui l√≤ng nh·∫≠p App ID v√† App Secret tr∆∞·ªõc khi k·∫øt n·ªëi.</div>
                        <% } else { %>
                            <a href="/auth/facebook" class="btn btn-lg btn-outline-primary fw-bold mb-3">
                                <i class="bi bi-facebook"></i> ƒêƒÇNG NH·∫¨P FACEBOOK ƒê·ªÇ L·∫§Y PAGE
                            </a>
                        <% } %>
                    </div>
                </div>

                <% if (fetchedPages && fetchedPages.length > 0) { %>
                    <h5 class="fw-bold mt-3">Danh s√°ch Fanpage c·ªßa b·∫°n:</h5>
                    <div class="list-group">
                        <% fetchedPages.forEach(page => { %>
                            <div class="page-item-card">
                                <div class="d-flex align-items-center">
                                    <div class="page-avatar d-flex align-items-center justify-content-center fw-bold fs-4 text-white bg-primary">
                                        <%= page.name.charAt(0) %>
                                    </div>
                                    <div>
                                        <h5 class="mb-0 fw-bold"><%= page.name %></h5>
                                        <small class="text-muted">ID: <%= page.id %></small>
                                    </div>
                                </div>
                                <form action="/admin/connect-page" method="POST">
                                    <input type="hidden" name="name" value="<%= page.name %>">
                                    <input type="hidden" name="pageId" value="<%= page.id %>">
                                    <input type="hidden" name="accessToken" value="<%= page.access_token %>">
                                    <button type="submit" class="btn btn-success fw-bold">
                                        <i class="bi bi-check-circle"></i> K·∫æT N·ªêI NGAY
                                    </button>
                                </form>
                            </div>
                        <% }) %>
                    </div>
                <% } %>

                <% if (pages && pages.length > 0) { %>
                    <h6 class="fw-bold mt-4 text-success"><i class="bi bi-link-45deg"></i> C√°c Fanpage ƒëang ho·∫°t ƒë·ªông:</h6>
                    <table class="table table-bordered table-sm">
                        <% pages.forEach(p => { %>
                            <tr>
                                <td class="align-middle fw-bold"><%= p.name %></td>
                                <td class="align-middle"><small><%= p.pageId %></small></td>
                                <td class="align-middle text-end">
                                    <form action="/admin/delete-page" method="POST" class="d-inline">
                                        <input type="hidden" name="id" value="<%= p.id %>">
                                        <button class="btn btn-sm btn-outline-danger">Ng·∫Øt k·∫øt n·ªëi</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </table>
                <% } %>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header bg-gradient-primary">üì¶ C√ÄI ƒê·∫∂T S·∫¢N PH·∫®M (GI√Å - SHIP - QU√Ä)</div>
            <div class="card-body">
                <table class="table table-hover align-middle" id="productTable">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 25%">T√™n SP</th>
                            <th style="width: 15%">Gi√° & Ship</th>
                            <th style="width: 10%">Kho</th>
                            <th style="width: 35%">Ch·ªçn Qu√† T·∫∑ng</th>
                            <th style="width: 15%">H√†nh ƒë·ªông</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(p => { %>
                        <tr class="product-row" data-id="<%= p.id %>">
                            <td>
                                <strong><%= p.name %></strong><br>
                                <% if (p.image) { %><img src="<%= p.image %>" class="product-thumb mt-1"><% } %>
                            </td>
                            <td>
                                <div class="text-danger fw-bold mb-2"><%= p.price %></div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input input-freeship" type="checkbox" <%= p.isFreeship ? 'checked' : '' %>>
                                    <label class="form-check-label small fw-bold text-success">Freeship</label>
                                </div>
                            </td>
                            <td>
                                <select class="form-select form-select-sm input-stock <%= p.inStock ? 'text-success fw-bold' : 'text-danger fw-bold' %>">
                                    <option value="true" <%= p.inStock ? 'selected' : '' %>>C√íN</option>
                                    <option value="false" <%= !p.inStock ? 'selected' : '' %>>H·∫æT</option>
                                </select>
                            </td>
                            <td>
                                <div class="gift-selector">
                                    <% customGifts.forEach(g => { 
                                        let isSelected = p.allowedGifts && p.allowedGifts.includes(g.name);
                                        if (g.inStock) {
                                    %>
                                        <div class="form-check">
                                            <input class="form-check-input input-gift" type="checkbox" value="<%= g.name %>" <%= isSelected ? 'checked' : '' %>>
                                            <label class="form-check-label"><%= g.name %></label>
                                        </div>
                                    <% }}) %>
                                </div>
                            </td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editModal<%= p.id %>">S·ª≠a</button>
                                <form action="/admin/delete-product" method="POST" class="d-inline"><input type="hidden" name="id" value="<%= p.id %>"><button class="btn btn-sm btn-outline-danger">X√≥a</button></form>
                            </td>
                        </tr>
                        
                        <div class="modal fade" id="editModal<%= p.id %>" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form action="/admin/save-product-info" method="POST">
                                        <div class="modal-header bg-primary text-white"><h5 class="modal-title">S·ª≠a SP</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                                        <div class="modal-body">
                                            <input type="hidden" name="id" value="<%= p.id %>">
                                            <div class="mb-3"><label>T√™n SP</label><input type="text" name="name" class="form-control" value="<%= p.name %>"></div>
                                            <div class="mb-3"><label>Gi√°</label><input type="text" name="price" class="form-control" value="<%= p.price %>"></div>
                                            <div class="mb-3"><label>Link ·∫¢nh</label><input type="text" name="image" class="form-control" value="<%= p.image %>"></div>
                                        </div>
                                        <div class="modal-footer"><button type="submit" class="btn btn-primary">L∆∞u</button></div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6 mb-5">
                <div class="card h-100">
                    <div class="card-header bg-warning text-dark">üéÅ QU·∫¢N L√ù KHO QU√Ä G·ªêC</div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <% customGifts.forEach(g => { %>
                            <tr>
                                <td><%= g.name %></td>
                                <td>
                                    <form action="/admin/toggle-gift" method="POST" class="d-inline">
                                        <input type="hidden" name="id" value="<%= g.id %>">
                                        <div class="form-check form-switch"><input class="form-check-input" type="checkbox" onchange="this.form.submit()" <%= g.inStock ? 'checked' : '' %>></div>
                                    </form>
                                </td>
                                <td>
                                    <form action="/admin/delete-gift" method="POST" class="d-inline"><input type="hidden" name="id" value="<%= g.id %>"><button class="btn btn-sm btn-outline-danger">X√≥a</button></form>
                                </td>
                            </tr>
                            <% }) %>
                        </table>
                        <form action="/admin/add-gift" method="POST" class="mt-2 d-flex"><input type="text" name="name" class="form-control me-2" placeholder="Th√™m qu√† m·ªõi..." required><button class="btn btn-warning">Th√™m</button></form>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-5">
                <div class="card h-100">
                    <div class="card-header bg-secondary text-white">‚öôÔ∏è C·∫§U H√åNH API GEMINI</div>
                    <div class="card-body">
                        <form action="/admin/save-ai" method="POST">
                            <label>Gemini API Key:</label>
                            <input type="text" name="apiKey" class="form-control mb-2" value="<%= aiConfig.apiKey %>">
                            <button class="btn btn-dark w-100">L∆∞u API</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="floating-save-bar">
        <button onclick="saveAllBulk()" class="btn btn-primary btn-lg fw-bold shadow"><i class="bi bi-save-fill"></i> L∆ØU TO√ÄN B·ªò C·∫§U H√åNH</button>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function saveAllBulk() {
            const btn = document.querySelector('button[onclick="saveAllBulk()"]');
            btn.innerHTML = '<i class="bi bi-hourglass-split"></i> ƒêang l∆∞u...'; btn.disabled = true;
            const products = [];
            document.querySelectorAll('.product-row').forEach(row => {
                const id = row.getAttribute('data-id');
                const inStock = row.querySelector('.input-stock').value === 'true';
                const isFreeship = row.querySelector('.input-freeship').checked;
                const allowedGifts = [];
                row.querySelectorAll('.input-gift:checked').forEach(cb => allowedGifts.push(cb.value));
                products.push({ id, inStock, isFreeship, allowedGifts });
            });
            try {
                const res = await fetch('/admin/save-all-bulk', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ products }) });
                const data = await res.json();
                if (data.ok) { alert('‚úÖ ƒê√£ l∆∞u th√†nh c√¥ng!'); location.reload(); }
                else { alert('‚ùå L·ªói: ' + data.error); btn.disabled = false; btn.innerHTML = 'L∆ØU TO√ÄN B·ªò C·∫§U H√åNH'; }
            } catch (e) { alert('‚ùå L·ªói k·∫øt n·ªëi'); btn.disabled = false; }
        }
    </script>
</body>
</html>