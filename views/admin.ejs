        .status-indicator { display: flex; align-items: center; gap: 10px; font-weight: bold; font-size: 16px; }
        
        /* Form & Input */
        textarea.rules-box { width: 100%; height: 200px; padding: 10px; border: 1px solid #ddd; border-radius: 4px; font-family: monospace; resize: vertical; }
        input[type="text"], input[type="number"] { width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; margin-bottom: 10px; }
        label { font-weight: bold; font-size: 13px; color: #555; margin-bottom: 3px; display: block; }

