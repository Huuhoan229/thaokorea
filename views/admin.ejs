        .bg-gradient-warning { background: linear-gradient(45deg, #f6c23e, #dda20a); color: #333; }
        .bg-gradient-facebook { background: linear-gradient(45deg, #1877f2, #0d5cb8); color: white; }
        
        .product-thumb { width: 60px; height: 60px; object-fit: cover; border-radius: 8px; border: 1px solid #dee2e6; background-color: #fff; }
        .form-check-input:checked { background-color: #1cc88a; border-color: #1cc88a; }
