            document.getElementById('prodGift').value = btn.getAttribute('data-gift');
            document.getElementById('prodDesc').value = btn.getAttribute('data-desc');
            document.getElementById('productFormContainer').style.display = 'block';
            window.scrollTo(0, document.getElementById('productFormContainer').offsetTop);
        }
    </script>
</body>
</html>