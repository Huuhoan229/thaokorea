            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-12">
                        <form action="/admin/save-fb-config" method="POST" class="row g-2 align-items-end">
                            <div class="col-md-4"><label class="small fw-bold">App ID:</label><input type="text" name="appId" class="form-control" value="<%= fbConfig.appId %>"></div>
                            <div class="col-md-4"><label class="small fw-bold">App Secret:</label><input type="password" name="appSecret" class="form-control" value="<%= fbConfig.appSecret %>"></div>
                            <div class="col-md-4"><button type="submit" class="btn btn-primary w-100">L∆∞u Config</button></div>
                        </form>
                    </div>
                </div>
                <div class="text-center mb-3">
                    <a href="/auth/facebook" class="btn btn-outline-primary fw-bold"><i class="bi bi-facebook"></i> ƒêƒÇNG NH·∫¨P FACEBOOK & L·∫§Y PAGE</a>
                </div>
                
                <% if (fetchedPages && fetchedPages.length > 0) { %>
                    <div class="list-group mb-3">
                        <% fetchedPages.forEach(page => { %>
