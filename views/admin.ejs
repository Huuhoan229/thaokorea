                            <form method="POST" action="/admin/delete-product" onsubmit="return confirm('X√≥a s·∫£n ph·∫©m n√†y?')" style="margin:0">
                                <input type="hidden" name="id" value="<%= p.id %>">
                                <button type="submit" class="btn-danger"><i class="fas fa-trash"></i></button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>

    <script>
        function toggleForm(id) {
            var x = document.getElementById(id);
            x.style.display = x.style.display === "none" ? "block" : "none";
        }

        // H√†m m·ªü form ƒë·ªÉ TH√äM M·ªöI (X√≥a tr·∫Øng d·ªØ li·ªáu c≈©)
        function showAddProduct() {
            document.getElementById('formTitle').innerText = "Th√™m S·∫£n Ph·∫©m M·ªõi";
            document.getElementById('prodId').value = ""; // X√≥a ID ƒë·ªÉ Server bi·∫øt l√† th√™m m·ªõi
            document.getElementById('prodName').value = "";
